# Application Settings
NODE_ENV=development
APP_PORT=8080
APP_CONTAINER_NAME=telegram-diary-bot

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
USE_WEBHOOK=false
WEBHOOK_BASE_URL=https://example.com
BOT_WEBHOOK_SECRET=your_webhook_secret_here

# Database Configuration
DATABASE_URL=postgresql://diary_user:diary_password@postgres:5432/diary_db?schema=public
DATABASE_CONTAINER_NAME=diary-postgres
DATABASE_USERNAME=diary_user
DATABASE_PASSWORD=diary_password
DATABASE_NAME=diary_db
DATABASE_PORT=5432

# Application Defaults
DEFAULT_TIMEZONE=UTC
LOG_LEVEL=info